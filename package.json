{
    "type": "module",
    "name": "better-lyrics",
    "version": "2.0.5.8",
    "description": "Enhance YouTube Music with beautiful time-synced lyrics, multilingual support, real-time translations and more",
    "main": "index.js",
    "scripts": {
        "dev": "extension dev --browser chrome --polyfill",
        "dev:brave": "extension dev --chromium-binary \"/Applications/Brave Browser.app/Contents/MacOS/Brave Browser\" --polyfill",
        "start": "extension start --polyfill",
        "build": "extension build --browser all --polyfill",
        "build:zip": "extension build --browser all --polyfill --zip",
        "preview": "extension preview --polyfill",
        "lint": "npx @biomejs/biome lint --write . && npx @biomejs/biome format --write .",
        "update-version": "tsx tooling/update-version.ts",
        "typecheck": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/better-lyrics/better-lyrics.git"
    },
    "keywords": [
        "youtube-music",
        "chrome-extension",
        "better-lyrics"
    ],
    "author": "boidushya",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/better-lyrics/better-lyrics/issues"
    },
    "homepage": "https://github.com/better-lyrics/better-lyrics#readme",
    "dependencies": {
        "@codemirror/commands": "^6.10.0",
        "@codemirror/lang-css": "^6.3.1",
        "@codemirror/lint": "^6.9.2",
        "@codemirror/search": "^6.5.11",
        "@codemirror/state": "^6.5.2",
        "@codemirror/view": "^6.38.4",
        "@fsegurai/codemirror-theme-material-dark": "^6.2.3",
        "codemirror": "^5.65.20",
        "extension": "2.1.3",
        "fast-xml-parser": "^5.3.3",
        "lz-string": "^1.5.0",
        "react-refresh": "^0.18.0",
        "sortablejs": "^1.15.6"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.0.4",
        "@prefresh/core": "^1.5.8",
        "@prefresh/utils": "^1.2.1",
        "@types/chrome": "^0.1.24",
        "@types/codemirror": "^5.60.16",
        "@types/jsdom": "^27.0.0",
        "@types/node": "^24.10.2",
        "@types/sortablejs": "^1.15.9",
        "@typescript/lib-dom": "npm:@types/web@^0.0.280",
        "axios": "^1.13.1",
        "jsdom": "^27.1.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    }
}
